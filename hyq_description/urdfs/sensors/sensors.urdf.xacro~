<?xml version="1.0"?>

<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
       xmlns:xacro="http://ros.org/wiki/xacro">



  <include filename="$(find hyq_model)/urdfs/sensors/microstrain_3dmgx325_imu.urdf.xacro"/>

  <!-- ======================================== Sensors ===================================== -->
  <!-- The xacro macro xacro:hyq_leg contains: imu, kinect camera, stereo camera and velodyne -->
  <xacro:macro name="hyq_sensors" params="parent">

    <!-- Joints -->
    <joint name="imu_joint" type="fixed">
      <origin xyz="0.3 0 0.1" rpy="0 ${-PI} 0"/>
      <parent link="${parent}" />
      <child link="imu"/>
    </joint>

    <joint name="kinect_joint" type="fixed">
      <origin xyz="0.7 0.04 0.02" rpy="0.0 1.2 0.0" /> 
      <parent link="${parent}" />
      <child link="kinect"/>
    </joint>


    <!-- Links -->
    <link name="3dmgx325_imu">
      <inertial>
        <origin xyz="-0.00020  0.00010  0.00110"/>
        <mass value="0.018"/>
        <inertia ixx="0.0" iyy="0.0" izz="0.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.02 0.02 0.02" />
        </geometry>
      </visual>
    </link>

    <link name="kinect">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.05 0.20 0.05" />
        </geometry>
	<material name="black">
            <color rgba=".13 .13 .13 1"/>
        </material>
      </visual>
    </link>


    <!-- Sensor definitions -->
    <xacro:microstrain_3dmgx325_imu imu_name="3dmgx325_trunk_imu" imu_topic="trunk_imu/data" update_rate="100.0" stdev="0.00017"/>

  </xacro:macro>

</robot>
